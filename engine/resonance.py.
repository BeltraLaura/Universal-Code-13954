def calculate_resonance(user_freq, environment_freq):
    """
    Calculates the connection between a source signal and the 'Universal Soup'.
    Returns the Resonance Coefficient (R).
    """
    if user_freq == 0:
        return 0
        
    resonance = environment_freq / user_freq
    
    # Check for Harmonic Unity (Whole numbers or clean fractions)
    is_unified = resonance.is_integer() or (1 / resonance).is_integer()
    
    return {
        "coefficient": round(resonance, 4),
        "unified": is_unified,
        "message": "Unity Achieved" if is_unified else "Searching for Harmonic..."
    }

# Example: Syncing a heartbeat with Earth's Schumann Resonance
print(calculate_resonance(1.2, 7.83))


def genesis_transition(bio_pulse, gravity_well):
    """
    Calculates the 'Birth' phase transition.
    Converts a potential frequency (1/x) into an active signal (x).
    """
    # Universal constant for first breath resonance
    atmospheric_sync = 0.25 
    
    # The moment of 'Genesis'
    active_frequency = bio_pulse * atmospheric_sync * gravity_well
    
    return {
        "event": "Genesis Transition",
        "active_signal": round(active_frequency, 8),
        "status": "Resonating in Visible Spectrum"
    }

# Example: Initializing a life signal
# (Heartrate: 2.0 Hz, Local Gravity: 9.8)
print(genesis_transition(2.0, 9.8))


def user_genesis_activation(birth_date_hash, location_coords):
    """
    Final Activation: Maps a specific user's arrival into the UC 13954 field.
    Uses birth data as a unique key to unlock their 'Resonance Signature'.
    """
    # Convert personal data into a frequency-ready float
    personal_resonance = sum(ord(c) for c in str(birth_date_hash)) % 13954 / 100
    
    # Calculate alignment with the planet's gravity at birth location
    alignment = personal_resonance * location_coords['gravity']
    
    return {
        "identity": "Authenticated by L.E.B.",
        "resonance_signature": round(alignment, 6),
        "status": "Final Activation Complete: You are a recognized node."
    }

